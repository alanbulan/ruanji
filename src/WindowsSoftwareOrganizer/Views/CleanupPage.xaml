<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WindowsSoftwareOrganizer.Views.CleanupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer.Views"
    xmlns:vm="using:WindowsSoftwareOrganizer.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="清理" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,16" />

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Command="{x:Bind ViewModel.ScanCommand}" 
                    IsEnabled="{x:Bind ViewModel.IsNotScanning, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72C;" FontSize="16" />
                    <TextBlock Text="扫描" />
                </StackPanel>
            </Button>

            <Button Grid.Column="1" 
                    Command="{x:Bind ViewModel.CancelScanCommand}"
                    Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay}"
                    Margin="8,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE711;" FontSize="16" />
                    <TextBlock Text="取消" />
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8">
                <Button Content="全选" Command="{x:Bind ViewModel.SelectAllCommand}" />
                <Button Content="全不选" Command="{x:Bind ViewModel.SelectNoneCommand}" />
                <Button Content="仅安全项" Command="{x:Bind ViewModel.SelectSafeCommand}" />
            </StackPanel>

            <CheckBox Grid.Column="4" 
                      Content="移至回收站" 
                      IsChecked="{x:Bind ViewModel.MoveToRecycleBin, Mode=TwoWay}"
                      Margin="16,0,0,0" />

            <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="16,0,0,0">
                <TextBlock Text="已选择: " VerticalAlignment="Center" />
                <TextBlock Text="{x:Bind ViewModel.SelectedSizeText, Mode=OneWay}" 
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- AI 助手按钮 -->
            <Button x:Name="AIAssistantButton"
                    Grid.Column="6"
                    Click="AIAssistant_Click"
                    ToolTipService.ToolTip="AI 智能清理"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="16,0,0,0"
                    Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE99A;" FontSize="14" />
                    <TextBlock Text="AI 清理" />
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="2">
            <ListView ItemsSource="{x:Bind ViewModel.CleanupItems, Mode=OneWay}"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:CleanupItemViewModel">
                        <Grid Padding="8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                      VerticalAlignment="Center" />

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Item.Path}" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{x:Bind Item.RelatedSoftware}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Opacity="0.7" />
                            </StackPanel>

                            <Border Grid.Column="2"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind TypeText}" 
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Border>

                            <TextBlock Grid.Column="3"
                                       Text="{x:Bind SizeText}"
                                       VerticalAlignment="Center"
                                       Width="80"
                                       TextAlignment="Right"
                                       Style="{StaticResource CaptionTextBlockStyle}" />

                            <Border Grid.Column="4"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    VerticalAlignment="Center"
                                    Width="60">
                                <TextBlock Text="{x:Bind RiskText}" 
                                           TextAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay}">
                <Rectangle Fill="{ThemeResource LayerFillColorDefaultBrush}" Opacity="0.8" />
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                    <ProgressRing IsActive="{x:Bind ViewModel.IsScanning, Mode=OneWay}" Width="48" Height="48" />
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                               Style="{StaticResource BodyTextBlockStyle}" />
                    <ProgressBar Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}" 
                                 Width="200" />
                    <Button Command="{x:Bind ViewModel.CancelScanCommand}" Content="取消扫描" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <ProgressRing IsActive="{x:Bind ViewModel.IsCleaning, Mode=OneWay}" 
                              Width="20" Height="20" />
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                           Style="{StaticResource CaptionTextBlockStyle}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <Button Grid.Column="1"
                    Command="{x:Bind ViewModel.CancelCleanupCommand}"
                    Visibility="{x:Bind ViewModel.IsCleaning, Mode=OneWay}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE711;" FontSize="16" />
                    <TextBlock Text="取消" />
                </StackPanel>
            </Button>

            <Button Grid.Column="2"
                    Style="{StaticResource AccentButtonStyle}"
                    Command="{x:Bind ViewModel.CleanupCommand}"
                    IsEnabled="{x:Bind ViewModel.IsNotCleaning, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;" FontSize="16" />
                    <TextBlock Text="清理选中项" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
