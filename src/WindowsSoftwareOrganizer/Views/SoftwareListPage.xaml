<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WindowsSoftwareOrganizer.Views.SoftwareListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer.Views"
    xmlns:vm="using:WindowsSoftwareOrganizer.ViewModels"
    xmlns:models="using:WindowsSoftwareOrganizer.Core.Models"
    xmlns:converters="using:WindowsSoftwareOrganizer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <converters:CategoryToDisplayNameConverter x:Key="CategoryToDisplayNameConverter" />
        <converters:SizeToStringConverter x:Key="SizeToStringConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="软件列表" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,16" />

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Command="{x:Bind ViewModel.ScanCommand}" 
                    IsEnabled="{x:Bind ViewModel.IsNotLoading, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72C;" FontSize="16" />
                    <TextBlock Text="扫描" />
                </StackPanel>
            </Button>

            <AutoSuggestBox Grid.Column="1" 
                            PlaceholderText="搜索软件..."
                            QueryIcon="Find"
                            Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="16,0" />

            <ComboBox Grid.Column="2"
                      ItemsSource="{x:Bind ViewModel.Categories}"
                      SelectedItem="{x:Bind ViewModel.SelectedCategoryOption, Mode=TwoWay}"
                      SelectedIndex="0"
                      DisplayMemberPath="DisplayName"
                      Width="150" />

            <!-- AI 助手按钮 -->
            <Button x:Name="AIAssistantButton"
                    Grid.Column="3"
                    Click="AIAssistant_Click"
                    ToolTipService.ToolTip="AI 智能分析"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="8,0,0,0"
                    Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE99A;" FontSize="14" />
                    <TextBlock Text="AI 分析" />
                </StackPanel>
            </Button>

            <DropDownButton Grid.Column="4" Margin="8,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8CB;" FontSize="16" />
                    <TextBlock Text="排序" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="按名称" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="{x:Bind vm:SortField.Name}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8AC;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="按类别" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="{x:Bind vm:SortField.Category}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8FD;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="按大小" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="{x:Bind vm:SortField.Size}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE7F8;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="按位置" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="{x:Bind vm:SortField.Location}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8B7;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Software List -->
            <ListView x:Name="SoftwareListView"
                      ItemsSource="{x:Bind ViewModel.FilteredList, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedSoftware, Mode=TwoWay}"
                      SelectionMode="Single"
                      ContainerContentChanging="SoftwareListView_ContainerContentChanging">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SoftwareEntry">
                        <Grid Padding="8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Software Icon -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Width="40" Height="40">
                                <Grid>
                                    <Image x:Name="SoftwareIcon" Width="32" Height="32" Stretch="Uniform" />
                                    <FontIcon x:Name="FallbackIcon" Glyph="&#xE74C;" FontSize="20"
                                              HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" />
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Name}" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                                <TextBlock Text="{x:Bind InstallPath}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Opacity="0.7"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <Border Grid.Column="2"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Category, Converter={StaticResource CategoryToDisplayNameConverter}}" 
                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Border>

                            <TextBlock Grid.Column="3"
                                       Text="{x:Bind TotalSizeBytes, Converter={StaticResource SizeToStringConverter}}"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Opacity="0.7"
                                       Width="80"
                                       TextAlignment="Right" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Loading Overlay -->
            <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <Rectangle Fill="{ThemeResource LayerFillColorDefaultBrush}" Opacity="0.8" />
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48" />
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                               Style="{StaticResource BodyTextBlockStyle}" />
                    <ProgressBar Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}" 
                                 Width="200" />
                </StackPanel>
            </Grid>

            <!-- Details Panel -->
            <Border Grid.Column="1"
                    Width="380"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="16,0,0,0"
                    Padding="16"
                    Visibility="{x:Bind ViewModel.IsDetailsPanelOpen, Mode=OneWay}">
                <ScrollViewer>
                    <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.IsDetailsPanelOpen, Mode=OneWay}">
                        <Grid>
                            <TextBlock Text="软件详情" Style="{StaticResource SubtitleTextBlockStyle}" />
                            <Button HorizontalAlignment="Right"
                                    Command="{x:Bind ViewModel.CloseDetailsPanelCommand}"
                                    Background="Transparent">
                                <FontIcon Glyph="&#xE711;" FontSize="12" />
                            </Button>
                        </Grid>

                        <StackPanel Spacing="4">
                            <TextBlock Text="名称" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.Name, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="版本" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.Version, Mode=OneWay, TargetNullValue='未知'}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="发布者" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.Vendor, Mode=OneWay, TargetNullValue='未知'}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="安装路径" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.InstallPath, Mode=OneWay}" 
                                           TextWrapping="Wrap" VerticalAlignment="Center" />
                                <Button Grid.Column="1" 
                                        Command="{x:Bind ViewModel.OpenFolderCommand}"
                                        ToolTipService.ToolTip="在资源管理器中打开"
                                        Padding="8" Margin="4,0,0,0">
                                    <FontIcon Glyph="&#xE838;" FontSize="14" />
                                </Button>
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="类别" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.Category, Mode=OneWay, Converter={StaticResource CategoryToDisplayNameConverter}}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="大小" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <TextBlock Text="{x:Bind ViewModel.SelectedSoftware.TotalSizeBytes, Mode=OneWay, Converter={StaticResource SizeToStringConverter}}" />
                        </StackPanel>

                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button HorizontalAlignment="Stretch" 
                                    Command="{x:Bind ViewModel.OpenFolderCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE838;" FontSize="16" />
                                    <TextBlock Text="打开安装目录" />
                                </StackPanel>
                            </Button>
                            <Button HorizontalAlignment="Stretch"
                                    Command="{x:Bind ViewModel.UninstallSoftwareCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" />
                                    <TextBlock Text="卸载软件" />
                                </StackPanel>
                            </Button>
                            <Button HorizontalAlignment="Stretch"
                                    Command="{x:Bind ViewModel.MigrateSoftwareCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8DE;" FontSize="16" />
                                    <TextBlock Text="迁移此软件" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Leftover Items Section -->
                        <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.HasLeftovers, Mode=OneWay}">
                            <TextBlock Text="残留项" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
                            <ListView ItemsSource="{x:Bind ViewModel.LeftoverItems, Mode=OneWay}"
                                      MaxHeight="150"
                                      SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Button HorizontalAlignment="Stretch" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Command="{x:Bind ViewModel.CleanLeftoversCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" />
                                    <TextBlock Text="清理残留" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Opacity="0.7" />
            <TextBlock HorizontalAlignment="Right"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Opacity="0.7">
                <Run Text="共" />
                <Run Text="{x:Bind ViewModel.FilteredList.Count, Mode=OneWay}" />
                <Run Text="个软件" />
            </TextBlock>
        </Grid>
    </Grid>
</Page>
