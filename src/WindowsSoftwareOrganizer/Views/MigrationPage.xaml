<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WindowsSoftwareOrganizer.Views.MigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:WindowsSoftwareOrganizer.Core.Models"
    xmlns:converters="using:WindowsSoftwareOrganizer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <converters:CategoryToDisplayNameConverter x:Key="CategoryToDisplayNameConverter" />
        <converters:SizeToStringConverter x:Key="SizeToStringConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="软件迁移" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,16" />

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <Button x:Name="RemoveSelectedButton" Click="RemoveSelectedButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;" FontSize="16" />
                    <TextBlock Text="移除选中" />
                </StackPanel>
            </Button>
            <Button x:Name="ClearAllButton" Click="ClearAllButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE894;" FontSize="16" />
                    <TextBlock Text="清空列表" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="380" />
            </Grid.ColumnDefinitions>

            <!-- Software List -->
            <Grid>
                <ListView x:Name="SoftwareListView"
                          ItemsSource="{x:Bind ViewModel.SelectedSoftware, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                          SelectionMode="Extended"
                          SelectionChanged="SoftwareListView_SelectionChanged"
                          ContainerContentChanging="SoftwareListView_ContainerContentChanging">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:SoftwareEntry">
                            <Grid Padding="8" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Width="40" Height="40">
                                    <Grid>
                                        <Image x:Name="SoftwareIcon" Width="32" Height="32" Stretch="Uniform" />
                                        <FontIcon x:Name="FallbackIcon" Glyph="&#xE74C;" FontSize="20"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" />
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Name}" 
                                               Style="{StaticResource BodyStrongTextBlockStyle}" />
                                    <TextBlock Text="{x:Bind InstallPath}" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Opacity="0.7"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>

                                <Border Grid.Column="2"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Category, Converter={StaticResource CategoryToDisplayNameConverter}}" 
                                               Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>

                                <TextBlock Grid.Column="3"
                                           Text="{x:Bind TotalSizeBytes, Converter={StaticResource SizeToStringConverter}}"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Opacity="0.7"
                                           Width="80"
                                           TextAlignment="Right" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="16"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE8B7;" FontSize="48" Opacity="0.5" />
                    <TextBlock Text="暂无待迁移的软件" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Opacity="0.7" />
                    <TextBlock Text="请在软件列表页面选择软件并点击迁移此软件按钮" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Opacity="0.5"
                               TextAlignment="Center" />
                </StackPanel>
            </Grid>

            <!-- Settings Panel -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="16,0,0,0"
                    Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="迁移设置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Target Path -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="目标路径" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{x:Bind ViewModel.TargetPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="选择目标文件夹..."
                                         IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}" />
                                <Button Grid.Column="1" 
                                        Command="{x:Bind ViewModel.BrowseTargetPathCommand}"
                                        IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}"
                                        ToolTipService.ToolTip="浏览">
                                    <FontIcon Glyph="&#xE838;" FontSize="14" />
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Naming Template -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="命名模板" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <ComboBox ItemsSource="{x:Bind ViewModel.Templates, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedTemplate, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"
                                      IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}"
                                      DisplayMemberPath="Name" />
                        </StackPanel>

                        <!-- Link Type -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="链接类型" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <ComboBox ItemsSource="{x:Bind ViewModel.LinkTypes}"
                                      SelectedItem="{x:Bind ViewModel.SelectedLinkType, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"
                                      IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}" />
                        </StackPanel>

                        <!-- Options -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="迁移选项" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7" />
                            <CheckBox Content="更新注册表引用"
                                      IsChecked="{x:Bind ViewModel.UpdateRegistry, Mode=TwoWay}"
                                      IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}" />
                            <CheckBox Content="验证文件完整性"
                                      IsChecked="{x:Bind ViewModel.VerifyIntegrity, Mode=TwoWay}"
                                      IsEnabled="{x:Bind ViewModel.IsNotMigrating, Mode=OneWay}" />
                        </StackPanel>

                        <!-- Progress -->
                        <StackPanel x:Name="ProgressPanel" Spacing="8" Visibility="Collapsed">
                            <ProgressBar Value="{x:Bind ViewModel.MigrationProgress, Mode=OneWay}"
                                         Maximum="100" />
                            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button x:Name="CancelButton"
                                    HorizontalAlignment="Stretch"
                                    Visibility="Collapsed"
                                    Command="{x:Bind ViewModel.CancelMigrationCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE711;" FontSize="16" />
                                    <TextBlock Text="取消迁移" />
                                </StackPanel>
                            </Button>
                            <Button HorizontalAlignment="Stretch"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Command="{x:Bind ViewModel.ExecuteMigrationCommand}"
                                    IsEnabled="{x:Bind ViewModel.CanExecuteMigration, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8DE;" FontSize="16" />
                                    <TextBlock Text="开始迁移" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Opacity="0.7" />
            <TextBlock HorizontalAlignment="Right"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Opacity="0.7">
                <Run Text="共" />
                <Run Text="{x:Bind ViewModel.SelectedSoftware.Count, Mode=OneWay}" />
                <Run Text="个软件待迁移" />
            </TextBlock>
        </Grid>
    </Grid>
</Page>
