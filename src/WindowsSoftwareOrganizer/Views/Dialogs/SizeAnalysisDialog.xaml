<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="WindowsSoftwareOrganizer.Views.Dialogs.SizeAnalysisDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer.Views.Dialogs"
    xmlns:models="using:WindowsSoftwareOrganizer.Core.Models"
    xmlns:converters="using:WindowsSoftwareOrganizer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="大小分析结果"
    PrimaryButtonText="关闭"
    DefaultButton="Primary"
    MinWidth="600"
    MinHeight="400">

    <ContentDialog.Resources>
        <converters:SizeToStringConverter x:Key="SizeToStringConverter" />
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Summary -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}">
                <Run Text="分析路径: " />
                <Run Text="{x:Bind Result.RootPath, Mode=OneWay}" />
            </TextBlock>
            <StackPanel Orientation="Horizontal" Spacing="24" Margin="0,8,0,0">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="总大小: " />
                    <Run Text="{x:Bind Result.TotalSize, Mode=OneWay, Converter={StaticResource SizeToStringConverter}}" />
                </TextBlock>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="文件数: " />
                    <Run Text="{x:Bind Result.TotalFiles, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="文件夹数: " />
                    <Run Text="{x:Bind Result.TotalDirectories, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Size Items List -->
        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind Result.Items, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SizeAnalysisItem">
                    <Grid Padding="8,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Glyph="{x:Bind local:SizeAnalysisDialog.GetItemIcon(IsDirectory)}" 
                                  FontSize="16" 
                                  Margin="0,0,12,0"
                                  Opacity="0.7" />
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{x:Bind Name}" 
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{x:Bind Size, Converter={StaticResource SizeToStringConverter}}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Opacity="0.7" />
                        
                        <TextBlock Grid.Column="3" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                            <Run Text="{x:Bind Percentage, Mode=OneWay}" /><Run Text="%" />
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Analysis Duration -->
        <TextBlock Grid.Row="2" 
                   Style="{StaticResource CaptionTextBlockStyle}" 
                   Opacity="0.5"
                   Margin="0,8,0,0">
            <Run Text="分析耗时: " />
            <Run Text="{x:Bind Result.AnalysisDuration.TotalSeconds, Mode=OneWay}" />
            <Run Text=" 秒" />
        </TextBlock>
    </Grid>
</ContentDialog>
