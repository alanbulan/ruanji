<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="WindowsSoftwareOrganizer.Views.Dialogs.TypeStatisticsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer.Views.Dialogs"
    xmlns:models="using:WindowsSoftwareOrganizer.Core.Models"
    xmlns:converters="using:WindowsSoftwareOrganizer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="文件类型统计"
    PrimaryButtonText="关闭"
    DefaultButton="Primary"
    MinWidth="600"
    MinHeight="400">

    <ContentDialog.Resources>
        <converters:SizeToStringConverter x:Key="SizeToStringConverter" />
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Summary -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}">
                <Run Text="分析路径: " />
                <Run Text="{x:Bind Result.RootPath, Mode=OneWay}" />
            </TextBlock>
            <StackPanel Orientation="Horizontal" Spacing="24" Margin="0,8,0,0">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="总文件数: " />
                    <Run Text="{x:Bind Result.TotalFiles, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="总大小: " />
                    <Run Text="{x:Bind Result.TotalSize, Mode=OneWay, Converter={StaticResource SizeToStringConverter}}" />
                </TextBlock>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7">
                    <Run Text="类型数: " />
                    <Run Text="{x:Bind Result.Items.Count, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Type Statistics List -->
        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind Result.Items, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:TypeStatisticsItem">
                    <Grid Padding="8,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="{x:Bind local:TypeStatisticsDialog.GetCategoryDisplayName(Category)}" 
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{x:Bind Extension}" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Opacity="0.6"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Opacity="0.7">
                            <Run Text="{x:Bind FileCount}" />
                            <Run Text=" 个" />
                        </TextBlock>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{x:Bind TotalSize, Converter={StaticResource SizeToStringConverter}}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Opacity="0.7" />
                        
                        <TextBlock Grid.Column="3" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                            <Run Text="{x:Bind SizePercentage, Mode=OneWay}" /><Run Text="%" />
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
