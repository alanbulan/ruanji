<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WindowsSoftwareOrganizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="软迹">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Height="48" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- App Icon using FontIcon (more reliable than Image for title bar) -->
            <Border Margin="16,0,12,0" 
                    VerticalAlignment="Center"
                    Background="#005A9E"
                    CornerRadius="4"
                    Width="20" Height="20">
                <FontIcon Glyph="&#xE71D;" 
                          FontSize="12" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
            </Border>

            <!-- App Title -->
            <TextBlock Grid.Column="1" 
                       x:Name="AppTitleTextBlock"
                       Text="软迹" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       VerticalAlignment="Center" />
        </Grid>

        <!-- Main Content -->
        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        IsTitleBarAutoPaddingEnabled="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="软件列表" Tag="SoftwareList">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE71D;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="文件管理" Tag="FileManager">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="迁移" Tag="Migration">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8DE;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="清理" Tag="Cleanup">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE74D;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" Padding="24">
                <Frame.Content>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#005A9E"
                                CornerRadius="12"
                                Width="64" Height="64" 
                                Margin="0,0,0,24">
                            <FontIcon Glyph="&#xE71D;" 
                                      FontSize="32" 
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Border>
                        <TextBlock Text="软迹" 
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="软件管理与清理工具" 
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   Opacity="0.7" />
                    </StackPanel>
                </Frame.Content>
            </Frame>
        </NavigationView>
    </Grid>
</Window>
