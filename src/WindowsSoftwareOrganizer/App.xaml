<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="WindowsSoftwareOrganizer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsSoftwareOrganizer"
    xmlns:converters="using:WindowsSoftwareOrganizer.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <converters:CategoryToDisplayNameConverter x:Key="CategoryToDisplayNameConverter" />
            <converters:IconPathToImageConverter x:Key="IconPathToImageConverter" />
            <converters:SizeToStringConverter x:Key="SizeConverter" />
            
            <!-- 全局覆盖 ContentDialog 最大宽度 -->
            <x:Double x:Key="ContentDialogMaxWidth">1200</x:Double>
            <x:Double x:Key="ContentDialogMaxHeight">900</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
